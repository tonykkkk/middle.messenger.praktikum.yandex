<link rel="stylesheet" type="text/css" href="/style.scss" />
<div class="profile-layout">
  {{>navigation-back id="backToChat"}}
  <div class="profile-info">
    <img src="{{ avatarUrl }}" class="profile-info__avatar" alt="link" />
    <h1 class="profile-info__header">{{ userName }}</h1>
    <form action="profile.html" method="POST">
      {{>form-row-edit caption="Старый пароль"  name="oldPassword" type="password" }}
      {{>form-row-edit caption="Новый пароль"  name="newPassword" type="password" }}
      {{>form-row-edit caption="Повторите новый пароль" type="password" }}
      {{>form-submit buttonName="Сохранить"}}
    </form>
  </div>
  <div></div>
</div>
