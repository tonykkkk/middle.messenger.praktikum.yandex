<link rel="stylesheet" type="text/css" href="/style.scss" />
<div class="profile-layout">
  {{>navigation-back id="backToChat"}}
  <div class="profile-info">
    <img src="{{ avatarUrl }}" class="profile-info__avatar" alt="link" />
    <h1 class="profile-info__header">{{ userName }}</h1>
    <form class="form-vertical" action="profile.html" method="POST">
      {{>form-row-edit caption="Почта" type="email" value="pochta@yandex.ru"}}
      {{>form-row-edit  caption="Логин" type="text" value="ivanivanov"}}
      {{>form-row-edit  caption="Имя" type="text" value="Иван"}}
      {{>form-row-edit  caption="Фамилия" type="text" value="Иванов"}}
      {{>form-row-edit  caption="Имя в чате" type="text" value="Иван"}}
      {{>form-row-edit  caption="Телефон" type="tel" value="+7 (909) 967 30 30"}}
      {{>form-submit buttonName="Сохранить"}}
    </form>
  </div>
  <div></div>
</div>
